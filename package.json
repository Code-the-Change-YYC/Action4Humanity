{
  "name": "action4humanity",
  "version": "1.0.0",
  "description": "",
  "main": "index.ts",
  "scripts": {
    "test": "NODE_ENV='test' && DOTENV_CONFIG_PATH='./.env.test' jest",
    "dev": "cross-env NODE_ENV='development' nodemon index.ts | pino-pretty",
    "build": "rimraf dist/ && tsc -p tsconfig.prod.json && copyfiles .env.production dist/",
    "start": "NODE_ENV='production' node dist/index.js",
    "cock": "docker compose up --detach --remove-orphans",
    "cock:stop": "docker compose down --remove-orphans",
    "prisma": "dotenv -e .env.development -- prisma --"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Code-the-Change-YYC/Action4Humanity.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Code-the-Change-YYC/Action4Humanity/issues"
  },
  "homepage": "https://github.com/Code-the-Change-YYC/Action4Humanity#readme",
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/dotenv": "^8.2.0",
    "@types/jest": "^29.4.1",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "copyfiles": "^2.4.1",
    "dotenv-cli": "^7.1.0",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-config-standard-with-typescript": "^34.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "jest": "^29.5.0",
    "nodemon": "^2.0.21",
    "pino-pretty": "^9.4.0",
    "rimraf": "^4.4.0",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@js-temporal/polyfill": "^0.4.3",
    "@prisma/client": "^4.11.0",
    "@trpc/server": "^10.15.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "pino": "^8.11.0",
    "prisma": "^4.11.0"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "standard-with-typescript",
      "plugin:prettier/recommended",
      "prettier"
    ],
    "overrides": [],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module",
      "project": "./tsconfig.json"
    },
    "plugins": [
      "simple-import-sort",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "endOfLine": "auto"
        }
      ],
      "no-console": "warn",
      "no-eval": "error",
      "no-var": "error",
      "@typescript-eslint/no-unused-vars": [
        "warn",
        {
          "argsIgnorePattern": "^_",
          "varsIgnorePattern": "^_"
        }
      ],
      "@typescript-eslint/consistent-type-imports": [
        "error",
        {
          "prefer": "type-imports"
        }
      ],
      "@typescript-eslint/explicit-function-return-type": "off",
      "eqeqeq": [
        "error",
        "smart"
      ],
      "simple-import-sort/imports": "error",
      "simple-import-sort/exports": "error"
    },
    "ignorePatterns": [
      "**/node_modules",
      "dist/"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testPathIgnorePatterns": [
      "client"
    ],
    "setupFiles": [
      "dotenv/config"
    ]
  }
}
